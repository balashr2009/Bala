<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main" android:weightSum="40">

    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp" android:gravity="center"
        android:text="Welcome" android:textSize="20sp"
        android:textColor="#F90"/>


    <FrameLayout
        android:id="@+id/Framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="34"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="4"
        app:menu="@menu/bottom_nav_menu" android:background="@color/white" />
</LinearLayout>